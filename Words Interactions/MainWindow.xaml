<Window x:Class="TestKinect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:k="http://schemas.microsoft.com/kinect/2013"
         xmlns:local="clr-namespace:TestKinect" 

        Title="MainWindow" Height="900" Width="1200">
    <Grid>
        <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" Name="sensorChooserUi" Margin="406,0,405,0" />
        <Canvas x:Name="canvas" HorizontalAlignment="Center" Height="790" Margin="10,0,10,10" VerticalAlignment="Bottom" Width="1172" Background="#FFE9FFF4">

            <Grid x:Name="leftCursor" Canvas.Left="550" Canvas.Top="400">
                <Rectangle x:Name="leftCursorBackground" Height="30"  Stroke="Black" Width="30" RadiusY="5" RadiusX="5" RenderTransformOrigin="12.5,3.3">
                    <Rectangle.Fill>
                        <ImageBrush/>
                    </Rectangle.Fill>
                </Rectangle>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold">L</TextBlock>
            </Grid>
            <Grid x:Name="rightCursor" Canvas.Left="650" Canvas.Top="400">
                <Rectangle x:Name="rightCursorBackground"  Fill="#FFF75F18" Height="30"  Stroke="Black" Width="30" RadiusY="5" RadiusX="5"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold">R</TextBlock>
            </Grid>
            <Grid>
                <local:HandCursor local:Name="imageRightCursor" />
            </Grid>

            <Image x:Name="tomateObject" Height="85" Canvas.Left="200" Canvas.Top="500" Width="344" Source="./images/tomate.png" RenderTransformOrigin="0.5,0.5"/>
            <Image x:Name="bananeObject" Height="85" Canvas.Left="600" Canvas.Top="503" Width="344" Source="./images/banane.png" RenderTransformOrigin="0.5,0.5"/>
            <Image x:Name="corbeille" Height="163" Canvas.Left="958" Canvas.Top="38" Width="167" Source="./images/corbeille.png"/>
        </Canvas>
        <Label x:Name="userText" Content="No User Detected" HorizontalAlignment="Left" Margin="30,39,0,0" VerticalAlignment="Top" Width="108"/>
        <Label x:Name="rotationText" Content="" HorizontalAlignment="Left" Margin="661,15,0,0" VerticalAlignment="Top" FontSize="30" RenderTransformOrigin="0.525,0.48"/>
    </Grid>
</Window>
