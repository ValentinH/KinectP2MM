<Window x:Name="Editor_Window" x:Class="KinectP2MM.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editeur de séquence" Height="350" Width="482" Closing="Editor_Window_Closing">
    <Grid>
        <Menu IsMainMenu="True">
            <MenuItem Header="_Fichier">
                <MenuItem Header="_Nouveau fichier" Command="New" />
                <Separator />
                <MenuItem Header="_Ouvrir un fichier" Command="Open"/>
                <Separator />
                <MenuItem Header="_Enregistrer" Command="Save"/>
                <MenuItem Header="_Enregistrer sous" Command="SaveAs" InputGestureText="Ctrl+Shift+S"/>
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="10,27,0,0" x:Name="sequenceComboBox" VerticalAlignment="Top" Width="120" SelectionChanged="sequenceComboBox_SelectionChanged" MouseEnter="sequenceComboBox_MouseEnter"/>
        <Button x:Name="deleteButton" Content="Supprimer" VerticalAlignment="Top" Margin="145,27,252,0" Height="23" Click="deleteButton_Click"/>
        <CheckBox x:Name="canRotateBox" Content="Rotation" HorizontalAlignment="Left" Margin="303,29,0,0" VerticalAlignment="Top" Checked="canRotate_Checked" Unchecked="canRotate_Unchecked"/>
        <CheckBox x:Name="canZoomBox" Content="Zoom" HorizontalAlignment="Left" Margin="401,29,0,0" VerticalAlignment="Top" Unchecked="canZoom_Unchecked" Checked="canZoom_Checked"/>
        <TextBox x:Name="listWordsTextBox" HorizontalAlignment="Left" Height="73" Margin="11,80,0,0" Text="Clement&#xD;&#xA;Valentin&#xD;&#xA;Simon" VerticalAlignment="Top" Width="245" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextChanged="listWordsTextBox_TextChanged"/>
        <TextBox x:Name="listXTextBox" HorizontalAlignment="Left" Height="73" Margin="273,80,0,0" TextWrapping="Wrap" Text="0&#xD;&#xA;100&#xD;&#xA;200" VerticalAlignment="Top" Width="88" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextChanged="listXTextBox_TextChanged"/>
        <TextBox x:Name="listYTextBox" HorizontalAlignment="Left" Height="73" Margin="377,80,0,0" TextWrapping="Wrap" Text="0&#xD;&#xA;100&#xD;&#xA;200" VerticalAlignment="Top" Width="88" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextChanged="listYTextBox_TextChanged"/>
        <Button x:Name="addButton" Content="Ajouter une séquence" HorizontalAlignment="Left" Margin="179,203,0,0" VerticalAlignment="Top" Width="131" Click="addButton_Click" RenderTransformOrigin="1.45,0.682"/>
        <TextBlock HorizontalAlignment="Left" Margin="118,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="1,0.652"><Run Language="fr-fr" Text="Mots"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="303,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="1,0.652"><Run Language="fr-fr" Text="X"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="411,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="1,0.652"><Run Language="fr-fr" Text="Y"/></TextBlock>
    </Grid>
</Window>
