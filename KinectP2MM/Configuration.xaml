        <Button x:Name="RightHandButton" Content="Changer image" HorizontalAlignment="Left" Margin="445,66,0,0" VerticalAlignment="Top" Width="120" Click="RightHandButton_Click"/>
        <Label Content="Main Gauche" HorizontalAlignment="Left" Margin="27,22,0,0" VerticalAlignment="Top" Width="116"/>
        <TextBox x:Name="LeftHandTextBox" HorizontalAlignment="Left" Height="23" Margin="178,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="243"/>
        <Button x:Name="LeftHandButton" Content="Changer image" HorizontalAlignment="Left" Margin="445,26,0,0" VerticalAlignment="Top" Width="120" Click="LeftHandButton_Click"/>
        <Label Content="Main Droite Fermée" HorizontalAlignment="Left" Margin="27,143,0,0" VerticalAlignment="Top" Width="116"/>
